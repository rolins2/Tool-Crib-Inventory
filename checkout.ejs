<%- include('partials/header.ejs'); -%>


<body class="bg-body-tertiary"></body>

    


    
<div class="container">
  <main>
    <div class="py-2 text-center">
      <img class="d-block mx-auto mb-4" src="https://thegood.com/wp-content/uploads/Checkout-Page-Design-600x374.png" alt="" >
      <h2>Checkout form</h2>
      <p class="lead">Below is the checkout form kindly fill all the data and insure its integrity</p>
    </div>

    <div class="row g-5">
      <div class="col-md-5 col-lg-4 order-md-last">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
          <span class="text-primary">Your cart</span>
        </h4>
        <ul class="list-group mb-3">
          <li class="list-group-item d-flex justify-content-between lh-sm">
            <div>
              <h6 class="my-0">Product name</h6>
              <small class="text-body-secondary"><%=chck.iname %></small>
            </div>
            <span class="text-body-secondary"></span>
          </li>
          <li class="list-group-item d-flex justify-content-between lh-sm">
            <div>
              <h6 class="my-0">Quantity Available</h6>
              <small class="text-body-secondary"><%=chck.itm_qty %></small>
            </div>
            <span class="text-body-secondary"></span>
          </li>
          <li class="list-group-item d-flex justify-content-between lh-sm">
            <div>
              <h6 class="my-0">Location </h6>
              <small class="text-body-secondary"><%=chck.storage_location %></small>
            </div>
            <span class="text-body-secondary"></span>
          </li>
         
          
        </ul>

       
      </div>
      <div class="col-md-7 col-lg-8">
        <h4 class="mb-3">Item Checkout Details</h4>
        <form class="needs-validation" novalidate=""  method = "POST" action = "/chkIten">
          <div class="row g-3">
            <div class="col-sm-6">
              <label for="firstName" class="form-label">First name</label>
              <input type="text" class="form-control" id="firstName" placeholder="" value="" required name = "fname">
              <div class="invalid-feedback">
                Valid first name is required.
              </div>
            </div>

            <div class="col-sm-6">
              <label for="lastName" class="form-label">Last name</label>
              <input type="text" class="form-control" id="lastName" placeholder="" value="" required name = "lname">
              <div class="invalid-feedback">
                Valid last name is required.
              </div>
            </div>

            <div class="col-12">
              <label for="username" class="form-label">Employee ID:</label>
              <div class="input-group has-validation">
                <span class="input-group-text">@</span>
                <input type="text" class="form-control" id="username" placeholder="Username" required name = "eIds">
              <div class="invalid-feedback">
                  Your Employee ID is required.
                </div>
              </div>
            </div>

            <div class="col-12">
              <label for="email" class="form-label">Quantity <span class="text-body-secondary">(Required)</span></label>
              <input type ="number" class="form-control" id="email" placeholder="Please enter the quantity required " autocomplete="off" name ="chkQty">
              <div class="invalid-feedback">
                Please enter a valid quantity.
              </div>
            </div>

            <div class="col-12">
              <label for="address" class="form-label">Usage Location: </label>
              <input type="text" class="form-control" id="address" placeholder="Kindly enter the location of item usage" required  name ="chkLocn">
              <div class="invalid-feedback">
                Please enter Usage Location.
              </div>

              <input  hidden="true" name = "itmCross" value ="<%=chck.id %>"/>
            </div>

      

          </div>

          <hr class="my-4">

         
          <div class="form-check">
            <input type="checkbox" class="form-check-input" id="save-info" required>
            <label class="form-check-label" for="save-info">Confirm that the details entered are correct </label>
          </div>

          <hr class="my-4">

          
          <hr class="my-4">

          <button class="w-100 btn btn-primary btn-lg" type="submit">Continue to checkout</button>
        </form>
      </div>
    </div>
  </main>

  <footer class="my-5 pt-5 text-body-secondary text-center text-small">
    <p class="mb-1">© 2017–2024 Commscope India </p>
    <ul class="list-inline">
      <li class="list-inline-item"><a href="#">Privacy</a></li>
      <li class="list-inline-item"><a href="#">Terms</a></li>
      <li class="list-inline-item"><a href="#">Support</a></li>
    </ul>
  </footer>
</div>
<script src="/docs/5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script src="checkout.js"></script>

</body>