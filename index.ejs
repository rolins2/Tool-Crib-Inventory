<%- include('partials/header.ejs'); -%>

<div class = "container">

    <div class="position-relative overflow-hidden p-2 p-md-3 m-md-3 text-center" style="background-image: url('https://i0.wp.com/martinsupply.com/wp-content/uploads/2023/02/Best-Inventory-Practices-for-a-Tool-Crib-or-Storeroom.jpg?fit=1200%2C628&ssl=1'); background-size: cover; background-position: center; background-repeat: no-repeat;">
        <div class="col-md-6 p-lg-1 mx-auto my-1">
            <h1 class="display-6 fw-bold white-text bg-highlight">Following Are the Items Available in the inventory</h1>
            <h3 class="fw-normal mb-3 bg-highlight white-text">You can add or remove items</h3>
        </div>
        <div class="product-device shadow-sm d-none d-md-block"></div>
        <div class="product-device product-device-2 shadow-sm d-none d-md-block"></div>
    </div>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-3" aria-label="Offcanvas navbar large">
        <div class="container-fluid">
          <a class="navbar-brand" href="./edit.ejs">Search For a item </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar2" aria-controls="offcanvasNavbar2" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="offcanvasNavbar2" aria-labelledby="offcanvasNavbar2Label">
            <div class="offcanvas-header">
              <h5 class="offcanvas-title" id="offcanvasNavbar2Label">Offcanvas</h5>
              <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
              <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
           
                
              </ul>
              <form action = "/search" method="POST"  class="d-flex mt-3 mt-lg-0"  >
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name = "shrch">
                <button class="btn btn-outline-success" type="submit">Search</button>
              </form>
            </div>
          </div>
        </div>
      </nav>
    
    <div class="container">

      <% if (mss){ %>

        <p> No items found </p>

        <% } else {%>
        <div class="row row-cols-1 row-cols-md-3 mb-2 text-center">

         

            <% items.forEach(entry => { %>
                <div class="col mb-3">
                    <div class="card rounded-3 shadow-sm">
                    
                        <div class="card-header py-2">
                            <h4 class="my-0 ">Item Name: <%= entry.iname %>   </h4>
                        </div>
                        <div class="card-body">

                          <form action = "/edit" method ="POST" >
                            <div class="left-corner" >
                              <input  hidden="true" name = "inputid" value ="<%= entry.id %>"/>
                              <button>
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                  <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                  <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
                                </svg>
                              </button>
                            </div>
                          </form>
                            
                              

                            <h1 class="card-title  pricing-card-title">Quantity: <%= entry.itm_qty %> <small class="text-body-secondary fw-light">units</small></h1>
                            <ul class="list-unstyled mt-1 mb-2">
                                <li>Present At Location: <%= entry.storage_location %></li>
                                <li>Entered By: <%= entry.emp_id %></li>
                            </ul>
                            <form action = "/checkout" method = "POST">
                              <input  hidden="true" name = "chkotid" value ="<%= entry.id %>"/>

                              <button type="submit" class="w-100 btn btn-lg btn-outline-primary"> Checkout</button>

                            </form>
                            <button type="button" class="w-100 btn btn-lg btn-danger mt-3">Delete</button>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>

        <%} %>
    </div>
    

    
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</html>